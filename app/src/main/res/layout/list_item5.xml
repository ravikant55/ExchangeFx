<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2dp">

    <ImageView
        android:id="@+id/profile_pic5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/member_name5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="desc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:background="#B0BEC5"
        android:padding="3dp" />

    <TextView
        android:id="@+id/member_name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/status5"
        android:layout_alignStart="@+id/status5"
        android:layout_below="@+id/view4"
        android:paddingBottom="10dp"
        android:text="txt"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_name5"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/profile_pic5"
        android:layout_toRightOf="@+id/profile_pic5"
        android:text="txt"
        android:textColor="#BDBDBD"
        android:textSize="12sp" />




</RelativeLayout>